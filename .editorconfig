root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4

[*.{md,yml,yaml,json}]
indent_style = space
indent_size = 2

# Special handling for markdown files in docs folder
[docs/**/*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
